{
	"version": "2.0.0",
	"tasks": [
		{
			"type": "cppbuild",
			"label": "Make build",
			"command": "make",
			"args": [
				"build",
				"BUILD_MODE=debug"
			],
			"options": {
				"cwd": "${workspaceFolder}"
			},
			"problemMatcher": [
				"$msCompile"
			],
			"group": {
				"kind": "build",
				"isDefault": true
			},
			"detail": "compiler: make"
		},
		{
			"label": "Run app",
			"type": "shell",
			"command": "cmd",
			"args": [
				"/c",
				"start",
				"cmd",
				"/k",
				"${workspaceFolder}/bin/debug/app.exe"
			],
			"group": "none",
			"problemMatcher": []
		}
	]
}
